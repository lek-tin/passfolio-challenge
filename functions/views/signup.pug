extends layout-public

block content
  h3 Sign Up
  form(action="/user/signup", method="POST")
    .row
      .input-field.col.s6
        input#first_name.validate(type='text', name='first_name')
        label(for='first_name') First Name
      .input-field.col.s6
        input#last_name.validate(type='text', name='last_name')
        label(for='last_name') Last Name
    .row
      .input-field.col.s12
        input#email.validate(type='email', name='email')
        label(for='email') Email
    .row
      .input-field.col.s12
        input#password.validate(type='password', name='password')
        label(for='password') Password
    .row
        .input-field.col.s12
          button.waves-effect.waves-light.btn(type="submit") Submit